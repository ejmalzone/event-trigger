name: Post New Release

on:
  workflow_dispatch:
    inputs:
      title:
        description: 'Release Title'
        required: true
        type: string
      body:
        description: 'Release Body'
        required: true
        type: string
      tag:
        description: 'Release Tag'
        required: true
        type: string

jobs:
  make-release:
    runs-on: self-hosted
    permissions:
      contents: write
    steps:
      - uses: actions/checkout@v2
        with:
          ref: stable
      - name: Set up JDK 21
        uses: actions/setup-java@v2
        with:
          java-version: '21'
          distribution: 'adopt'
          cache: maven
#      - name: Set up JDK 17
#        uses: oracle-actions/setup-java@v1.3.1
#        with:
#          release: '17'

      - name: Build with Maven
        run: xvfb-run mvn -T3 clean install

      - name: Copy artifacts
        run: mv launcher/target/*.zip ./

      - name: Download and Extract Windows JDK
        run: |
          wget https://download.oracle.com/java/17/latest/jdk-17_windows-x64_bin.zip
          unzip 

      - name: Release
        uses: softprops/action-gh-release@v1
        with:
          name: ${{ inputs.title }}
          body: ${{ inputs.body }}
          tag_name: ${{ inputs.tag }}
          draft: true
          files: |
            triggevent-linux.zip
            triggevent-win-bjoy.zip
            triggevent-win.zip

